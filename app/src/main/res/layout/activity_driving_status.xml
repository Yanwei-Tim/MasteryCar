<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="700dp"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    tools:context="com.example.p_c.masterycar.CarStatus.DrivingStatusActivity">


    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <SurfaceView
            android:id="@+id/surfaceview"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="驾驶时长"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />
        <Chronometer
            android:id ="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:format="%s"
            />

        <com.anderson.dashboardview.view.DashboardView
            android:id="@+id/waterView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="水温"
            android:textSize="10sp"
            app:unit="°C"
            app:progressStrokeWidth="7dp"
            app:endProgressColor="@color/colorPrimaryDark"
            app:startProgressColor="@color/colorAccent"
            app:tikeStrArray="@array/watermeter"
            app:tikeStrColor="@color/colorAccent"
            app:tikeStrSize="9dp"
            app:startNumber="-40"
            app:maxNumber="230"
            app:centerCircleColor="@color/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.anderson.dashboardview.view.DashboardView
            android:id="@+id/speedView"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="10dp"
            android:text="当前速度"
            android:textSize="15sp"
            app:unit="Km/h"
            app:progressStrokeWidth="16dp"
            app:endProgressColor="@color/colorPrimaryDark"
            app:startProgressColor="@color/colorAccent"
            app:tikeStrArray="@array/speedmeter"
            app:tikeStrColor="@color/colorAccent"
            app:tikeStrSize="13dp"
            app:startNumber="0"
            app:maxNumber="270"
            app:centerCircleColor="@color/colorPrimary"/>

        <TextClock
            android:layout_marginLeft="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="28sp"
            android:id="@+id/textClock"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="剩余油量"
            />

        <TextView
            android:id="@+id/gasNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="0 L"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="20dp"
            android:text="蓄电池电压"
            />
        <TextView
            android:id="@+id/batteryVoltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="11.0 V"/>
        <com.anderson.dashboardview.view.DashboardView
            android:id="@+id/turnSpeedView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:text="转速"
            android:textSize="10sp"
            app:unit="x1000R/MIN"
            app:progressStrokeWidth="7dp"
            app:endProgressColor="@color/colorPrimaryDark"
            app:startProgressColor="@color/colorAccent"
            app:tikeStrArray="@array/turnSpeedmeter"
            app:tikeStrColor="@color/colorAccent"
            app:tikeStrSize="10dp"
            app:startNumber="0"
            app:maxNumber="18"
            app:centerCircleColor="@color/colorPrimary"/>

    </LinearLayout>
</LinearLayout>
