<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@drawable/csy_listitem_citys"
              android:layout_height="80dp">
<ImageView
    android:id="@+id/carsignitem"
    android:layout_width="55dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
  />
    <TextView
        android:id="@+id/carnameitem"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/carsignitem"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
       />
    <TextView
        android:id="@+id/carnumitem"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/carnameitem"
        android:layout_alignLeft="@+id/carnameitem"
        android:textSize="16sp"
      />
</RelativeLayout>